{
  "name": "nestjs-monorepo-boilerplate",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "dev": "nest start --watch",
    "dev:reader": "nest start reader --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/master-api/main",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "aiodb:generate": "drizzle-kit generate --config=libs/data-modeling/src/aiodb.config.ts",
    "aiodb:migrate": "drizzle-kit migrate --config=libs/data-modeling/src/aiodb.config.ts",
    "aiodb:drizzle-studio": "drizzle-kit studio --config=libs/data-modeling/src/aiodb.config.ts",
    "aiodb:introspect": "drizzle-kit introspect --config=libs/data-modeling/src/aiodb.config.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/master-api/test/jest-e2e.json"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "drizzle-orm": "^0.32.0",
    "express": "^4.19.2",
    "pg": "^8.12.0",
    "postgres": "^3.3.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "jest": "^29.5.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "@biomejs/biome": "^1.8.3",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/node": "^20.14.12",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.7",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.23.0"
  },
  "engines": {
    "node": ">=20.12.0",
    "pnpm": ">=9.1.0"
  },
  "packageManager": "pnpm@9.1.0",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@aio/data-modeling(|/.*)$": "<rootDir>/libs/data-modeling/src/$1"
    }
  }
}
